<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <import resource="routes/api.xml" name-prefix="bitbag_vue_storefront_plugin_" prefix="/vsbridge" />

    <route id="bitbag_vue_storefront_plugin_image_process"
           path="/img/{width}/{height}/{operation}/{relativeUrl}" methods="GET">
        <requirement key="width">\d+</requirement>
        <requirement key="height">\d+</requirement>
        <requirement key="operation">crop|fit|resize|identify</requirement>
        <requirement key="relativeUrl">.+</requirement>
    </route>
</routes>
