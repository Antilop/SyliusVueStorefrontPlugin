<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="cart_create_cart" path="/create" methods="POST"
           controller="bitbag_sylius_vue_storefront_plugin.api.cart.create_cart" />
    <route id="cart_pull_cart" path="/pull" methods="GET"
           controller="bitbag_sylius_vue_storefront_plugin.api.cart.pull_cart" />
    <route id="cart_update_cart" path="/update" methods="POST"
           controller="bitbag_sylius_vue_storefront_plugin.api.cart.update_cart" />
    <route id="cart_delete_cart" path="/delete" methods="POST"
           controller="bitbag_sylius_vue_storefront_plugin.api.cart.delete_cart" />
    <route id="cart_apply_coupon" path="/apply-coupon" methods="POST"
           controller="bitbag_sylius_vue_storefront_plugin.api.cart.apply_coupon" />
    <route id="cart_delete_coupon" path="/delete-coupon" methods="POST"
           controller="bitbag_sylius_vue_storefront_plugin.api.cart.delete_coupon" />
    <route id="cart_get_applied_coupon" path="/coupon" methods="GET"
           controller="bitbag_sylius_vue_storefront_plugin.api.cart.get_applied_coupon" />
    <route id="cart_sync_totals" path="/totals" methods="GET"
           controller="bitbag_sylius_vue_storefront_plugin.api.cart.sync_totals" />
    <route id="cart_get_payment_methods" path="/payment-methods" methods="GET"
           controller="bitbag_sylius_vue_storefront_plugin.api.cart.get_payment_methods" />
    <route id="cart_set_shipping_methods" path="/shipping-methods" methods="POST"
           controller="bitbag_sylius_vue_storefront_plugin.api.cart.set_shipping_methods" />
    <route id="cart_set_shipping_information" path="/shipping-information"
           methods="POST" controller="bitbag_sylius_vue_storefront_plugin.api.cart.set_shipping_information" />
    <route id="cart_collect_totals" path="/collect-totals" methods="POST"
           controller="bitbag_sylius_vue_storefront_plugin.api.cart.collect_totals" />
</routes>
