<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="true" />

        <service id="bitbag_sylius_vue_storefront_plugin.factory.cart.cart_item_view_factory"
                 class="BitBag\SyliusVueStorefrontPlugin\Factory\Cart\CartItemViewFactory">
        </service>
        <service id="bitbag_sylius_vue_storefront_plugin.factory.cart.payment_method_view_factory"
                 class="BitBag\SyliusVueStorefrontPlugin\Factory\Cart\PaymentMethodViewFactory">
        </service>
        <service id="bitbag_sylius_vue_storefront_plugin.factory.cart.extension_attributes_view_factory"
                 class="BitBag\SyliusVueStorefrontPlugin\Factory\Cart\ExtensionAttributesViewFactory">
        </service>
        <service id="bitbag_sylius_vue_storefront_plugin.factory.cart.tax_grand_total_detail_view_factory"
                 class="BitBag\SyliusVueStorefrontPlugin\Factory\Cart\TaxGrandtotalDetailViewFactory">
        </service>
        <service id="bitbag_sylius_vue_storefront_plugin.factory.cart.total_segments_view_factory"
                 class="BitBag\SyliusVueStorefrontPlugin\Factory\Cart\TotalSegmentsViewFactory">
        </service>
        <service id="bitbag_sylius_vue_storefront_plugin.factory.cart.shipping_information_view_factory"
                 class="BitBag\SyliusVueStorefrontPlugin\Factory\Cart\ShippingInformationViewViewFactory">
            <argument type="service" id="bitbag_sylius_vue_storefront_plugin.factory.cart.extension_attributes_view_factory" />
            <argument type="service" id="bitbag_sylius_vue_storefront_plugin.factory.cart.tax_grand_total_detail_view_factory"/>
            <argument type="service" id="bitbag_sylius_vue_storefront_plugin.factory.cart.total_segments_view_factory" />
        </service>

    </services>
</container>
