<container xmlns="http://symfony.com/schema/dic/services">
    <services>
        <defaults public="true"/>

        <service id="bitbag_sylius_vue_storefront_plugin.handler.cart.create_cart_handler"
                 class="BitBag\SyliusVueStorefrontPlugin\Handler\Cart\CreateCartHandler">
            <argument type="service" id="sylius.repository.order"/>
            <tag name="messenger.message_handler" />
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.handler.cart.update_cart_handler"
                 class="BitBag\SyliusVueStorefrontPlugin\Handler\Cart\UpdateCartHandler">
            <argument type="service" id="sylius.repository.order"/>
            <tag name="messenger.message_handler" />
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.handler.cart.delete_cart_handler"
                 class="BitBag\SyliusVueStorefrontPlugin\Handler\Cart\DeleteCartHandler">
            <argument type="service" id="sylius.repository.order"/>
            <tag name="messenger.message_handler" />
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.handler.cart.apply_coupon_handler"
                 class="BitBag\SyliusVueStorefrontPlugin\Handler\Cart\ApplyCouponHandler">
            <tag name="messenger.message_handler" />
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.handler.cart.delete_coupon_handler"
                 class="BitBag\SyliusVueStorefrontPlugin\Handler\Cart\DeleteCouponHandler">
            <tag name="messenger.message_handler" />
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.handler.cart.set_shipping_methods_handler"
                 class="BitBag\SyliusVueStorefrontPlugin\Handler\Cart\SetShippingMethodsHandler">
            <argument type="service" id="sylius.repository.order"/>
            <argument type="service" id="sylius.factory.address"/>
            <argument type="service" id="sm.factory"/>
            <tag name="messenger.message_handler" />
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.handler.cart.set_shipping_information_handler"
                 class="BitBag\SyliusVueStorefrontPlugin\Handler\Cart\SetShippingInformationHandler">
            <argument type="service" id="sylius.repository.order"/>
            <argument type="service" id="sylius.factory.address"/>
            <argument type="service" id="sm.factory"/>
            <tag name="messenger.message_handler" />
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.handler.cart.collect_totals_handler"
                 class="BitBag\SyliusVueStorefrontPlugin\Handler\Cart\CollectTotalsHandler">
            <tag name="messenger.message_handler" />
        </service>
    </services>
</container>
