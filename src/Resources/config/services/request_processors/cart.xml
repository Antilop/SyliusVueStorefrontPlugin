<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services  http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="false" public="false" />

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.cart.apply_coupon"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">%bitbag.vue_storefront.request.apply_coupon.class%</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.cart.create_cart"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">%bitbag.vue_storefront.request.create_cart.class%</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.cart.delete_cart"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">%bitbag.vue_storefront.request.delete_cart.class%</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.cart.delete_coupon"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">%bitbag.vue_storefront.request.delete_coupon.class%</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.cart.get_payment_methods"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">%bitbag.vue_storefront.request.get_payment_methods.class%</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.cart.pull_cart"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">%bitbag.vue_storefront.request.pull_cart.class%</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.cart.set_shipping_information"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">%bitbag.vue_storefront.request.set_shipping_information.class%</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.cart.get_shipping_methods"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">%bitbag.vue_storefront.request.get_shipping_methods.class%</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.cart.update_cart"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">%bitbag.vue_storefront.request.update_cart.class%</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.cart.sync_totals"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">%bitbag.vue_storefront.request.sync_totals.class%</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.cart.get_applied_coupon"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">%bitbag.vue_storefront.request.get_applied_coupon.class%</argument>
        </service>
    </services>
</container>
