<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services  http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="false" public="false" />

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.user.change_password"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">BitBag\SyliusVueStorefrontPlugin\Request\User\ChangePasswordRequest</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.user.create_user"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">BitBag\SyliusVueStorefrontPlugin\Request\User\CreateUserRequest</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.user.get_order_history"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">BitBag\SyliusVueStorefrontPlugin\Request\User\GetOrderHistoryRequest</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.user.reset_password"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">BitBag\SyliusVueStorefrontPlugin\Request\User\ResetPasswordRequest</argument>
        </service>

        <service id="bitbag_sylius_vue_storefront_plugin.request_processor.user.update_user"
                 class="BitBag\SyliusVueStorefrontPlugin\Processor\RequestProcessor">
            <argument key="$className">BitBag\SyliusVueStorefrontPlugin\Request\User\UpdateUserRequest</argument>
        </service>
    </services>
</container>
