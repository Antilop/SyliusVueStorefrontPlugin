<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="BitBag\SyliusVueStorefrontPlugin\Request\User\CreateUserRequest">
        <property name="customer">
            <constraint name="NotNull" />
            <constraint name="Collection">
                <option name="fields">
                    <value key="email">
                        <constraint name="NotBlank">
                            <option name="message">bitbag_vue_storefront_api.sylius.email.not_blank</option>
                        </constraint>
                        <constraint name="Email">
                            <option name="message">bitbag_vue_storefront_api.sylius.email.invalid</option>
                        </constraint>
                        <constraint name="BitBag\SyliusVueStorefrontPlugin\Sylius\Validator\Constraints\ShopUserDoesNotExist" />
                    </value>
                    <value key="firstname">
                        <constraint name="NotBlank">
                            <option name="message">bitbag_vue_storefront_api.sylius.firstname.not_blank</option>
                        </constraint>
                    </value>
                    <value key="lastname">
                        <constraint name="NotBlank">
                            <option name="message">bitbag_vue_storefront_api.sylius.lastname.not_blank</option>
                        </constraint>
                    </value>
                </option>
            </constraint>
        </property>
        <property name="password">
            <constraint name="NotBlank">
                <option name="message">bitbag_vue_storefront_api.sylius.password.not_blank</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
