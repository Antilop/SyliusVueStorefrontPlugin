<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="BitBag\SyliusVueStorefrontPlugin\Request\User\ResetPasswordRequest">
        <property name="email">
            <constraint name="NotNull" />
            <constraint name="NotBlank">
                <option name="message">bitbag.vue_storefront_api.sylius.email.not_blank</option>
            </constraint>
            <constraint name="Email">
                <option name="message">bitbag.vue_storefront_api.sylius.email.invalid</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
